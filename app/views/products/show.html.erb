<body class="mobile">
	<section id="list">
		<div class="row">
			<div class="small-12 columns center">
				<p><strong><%= @product.name %></strong></p>
			</div>
		</div>
		<div class="row">
			<div class="small-12 columns center">
				<a href="/list">
					<div class="circle-large">
						<div class="circle-no">
							<i class="icon-remove"></i>
						</div>
						<%= image_tag "#{@product.image_url}", :class => 'product-image-large' %>
					</div>
				</a>
			</div>
			<div class="small-10 columns small-offset-1 centered left">
				<p class="description"><%= @product.description %></p>
				<a href="<%= @product.link_url %>" class="more-info"><i class="icon-search"></i> View Factsheet</a>
			</div>
		</div>
	</section>
  <%= javascript_include_tag "application" %>
</body>

