<body class="community scan">
	<div class="scans-header">
		<p>Settings</p>
		<p class="small">Connect and spread the word</p>
	</div>
	<div class="row">
		<div class="social-media-icons">
			<div class="small-3 columns">
				<%= image_tag "/assets/btn_fb_sml.png" %>
			</div>
			<div class="small-3 columns">
				<%= image_tag "/assets/btn_twitter_sml.png" %>
			</div>
			<div class="small-3 columns">
				<%= image_tag "/assets/btn_google_sml.png" %>
			</div>
			<div class="small-3 columns">
				<%= image_tag "/assets/btn_linkedin_sml.png" %>
			</div>
		</div>
	</div>
	<div class="location-box">
		<div class="row">
			<%= image_tag "http://maps.google.com/maps/api/staticmap?center=40.705628,-73.669682&zoom=15&markers=40.703026,-73.669444&size=500x200&sensor=false" %>
			<div class="small-10 columns">
				<p class="location-name">Your Location : &nbsp;<span class="current-location">Surry Hills, NSW</span></p>
			</div>
			<div class="small-2 columns border-left">
				<p class="location-arrow"><i class="icon-caret-down"></i></p>
			</div>
		</div>
	</div>
</body>
